@using Illustration.Areas.AdminPanel.ViewModel
@model DashboardVIewModel

@{
    var start = DateTime.UtcNow.AddHours(4);

    List<Order> order = new List<Order>();

    foreach (var item in Model.Orders)
    {
    @if ((start - item.CreatAt).Days <= 1)
        {
            order.Add(item);
        }
    }

    List<Portrait> portrait = new List<Portrait>();

    foreach (var item in Model.Portraits)
    {
    @if ((start - item.CreatAt).Days <= 1)
        {
            portrait.Add(item);
        }
    }

     List<Portrait> auktion2017 = new List<Portrait>();

    foreach (var item in Model.Portraits)
    {
    @if ((start - item.CreatAt).Days >= 2190 && item.IsAuktion==true)
        {
            auktion2017.Add(item);
        }
    }

    List<Portrait> auktion2018 = new List<Portrait>();

    foreach (var item in Model.Portraits)
    {
    @if ((start - item.CreatAt).Days >= 1825 && item.IsAuktion==true)
        {
            auktion2018.Add(item);
        }
    }

    List<Portrait> auktion2019 = new List<Portrait>();

    foreach (var item in Model.Portraits)
    {
    @if ((start - item.CreatAt).Days >= 1460 && item.IsAuktion==true)
        {
            auktion2019.Add(item);
        }
    }

    List<Portrait> auktion2020 = new List<Portrait>();

    foreach (var item in Model.Portraits)
    {
    @if ((start - item.CreatAt).Days >= 1095 && item.IsAuktion == true)
        {
            auktion2020.Add(item);
        }
    }

    List<Portrait> auktion2021 = new List<Portrait>();

    foreach (var item in Model.Portraits)
    {
    @if ((start - item.CreatAt).Days >= 730 && item.IsAuktion == true)
        {
            auktion2021.Add(item);
        }
    }

    List<Portrait> auktion2022 = new List<Portrait>();

    foreach (var item in Model.Portraits)
    {
    @if ((start - item.CreatAt).Days >= 365 && item.IsAuktion == true)
        {
            auktion2022.Add(item);
        }
    }

    List<Portrait> auktion2023 = new List<Portrait>();

    foreach (var item in Model.Portraits)
    {
    @if ((start - item.CreatAt).Days <= 365 && item.IsAuktion == true)
        {
            auktion2023.Add(item);
        }
    }

    List<Order> sale2017 = new List<Order>();

    foreach (var item in Model.Orders)
    {
    @if ((start - item.CreatAt).Days >= 2190)
        {
            sale2017.Add(item);
        }
    }

    List<Order> sale2018 = new List<Order>();

    foreach (var item in Model.Orders)
    {
    @if ((start - item.CreatAt).Days >= 1825)
        {
            sale2018.Add(item);
        }
    }

    List<Order> sale2019 = new List<Order>();

    foreach (var item in Model.Orders)
    {
    @if ((start - item.CreatAt).Days >= 1460)
        {
            sale2019.Add(item);
        }
    }

    List<Order> sale2020 = new List<Order>();

    foreach (var item in Model.Orders)
    {
    @if ((start - item.CreatAt).Days >= 1095)
        {
            sale2020.Add(item);
        }
    }

    List<Order> sale2021 = new List<Order>();

    foreach (var item in Model.Orders)
    {
    @if ((start - item.CreatAt).Days >= 730)
        {
            sale2021.Add(item);
        }
    }

    List<Order> sale2022 = new List<Order>();

    foreach (var item in Model.Orders)
    {
    @if ((start - item.CreatAt).Days >= 365)
        {
            sale2022.Add(item);
        }
    }

    List<Order> sale2023 = new List<Order>();

    foreach (var item in Model.Orders)
    {
    @if ((start - item.CreatAt).Days <= 365)
        {
            sale2023.Add(item);
        }
    }

    var drawing = Model.Categories.Where(x => x.Id == 3).ToList();
    var work = Model.Categories.Where(x => x.Id == 4).ToList();
    var handmade = Model.Categories.Where(x => x.Id == 6).ToList();
    var art = Model.Categories.Where(x=>x.Id == 2).ToList();
    var print = Model.Categories.Where(x => x.Id == 5).ToList();

    var Design = Model.Tags.Where(x => x.Id == 1).ToList();
    var Illustration = Model.Tags.Where(x => x.Id == 2).ToList();
    var Painting = Model.Tags.Where(x => x.Id == 3).ToList();
    var Posters = Model.Tags.Where(x => x.Id == 4).ToList();
    var Typography = Model.Tags.Where(x => x.Id == 5).ToList();
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-line fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Today Sale</p>
                    <h6 class="mb-0">$@order.Max(x=>x.Price)</h6>                
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-bar fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Sale</p>
                    <h6 class="mb-0">$@Model.Orders.Max(x => x.Price)</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-area fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Today Portraits</p>
                    <h6 class="mb-0">@portrait.Count</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-pie fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Portraits</p>
                    <h6 class="mb-0">@Model.Portraits.Count</h6>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
       <div class="col-sm-12 col-xl-6">
           <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Portraits by Categories</h6>
                <canvas id="bar-chart" width="465" height="232" style="display: block; box-sizing: border-box; height: 232px; width: 465px;"></canvas>
           </div>
       </div>
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Auktion & Sale</h6>
                </div>
                <canvas id="salse-revenue"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Portraits by Tags</h6>
                <canvas id="pie-chart" width="465" height="465" style="display: block; box-sizing: border-box; height: 465px; width: 465px;"></canvas>
            </div>
        </div>

        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Doughnut Chart</h6>
                <canvas id="doughnut-chart" width="465" height="465" style="display: block; box-sizing: border-box; height: 465px; width: 465px;"></canvas>
            </div>
        </div>

    </div>
</div>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-md-6 col-xl-4">
            <div class="h-100 bg-secondary rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="mb-0">Messages</h6>
                    <a asp-action="Index" asp-controller="Message">Show All</a>
                </div>
                @foreach (var item in Model.Messages)
                {
                    <div class="d-flex align-items-center border-bottom py-3">
                        <img class="rounded-circle flex-shrink-0" src="~/Uploads/Users/@item.AppUser.Image" alt="" style="width: 40px; height: 40px;">
                        <div class="w-100 ms-3">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-0">@item.AppUser.UserName</h6>
                                @if ((start - item.CreatAt).Days >= 1)
                                {
                                    <small class="text-muted">@((start - item.CreatAt).Days) days ago</small>
                                }
                                else if ((start - item.CreatAt).Hours >= 1)
                                {
                                    <small class="text-muted">@((start - item.CreatAt).Hours) hours ago</small>
                                }
                                else
                                {
                                    <small class="text-muted">@((start - item.CreatAt).Minutes) mins ago</small>
                                }
                            </div>
                            @if (item.Text.Length>23)
                            {
                                <span>@item.Text.Substring(0, 23)...</span>
                            }
                            else{
                                <span>@item.Text</span>
                            }                           
                        </div>
                    </div>
                }
           
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-xl-4">
            <div class="h-100 bg-secondary rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Calender</h6>
                </div>
                <div id="calender"></div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-xl-4">
            <div class="h-100 bg-secondary rounded p-4">

                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">To Do List</h6>
                </div>

                @await Html.PartialAsync("_todoListPartial",Model.TodoList)

                @foreach (TodoList item in ViewBag.Todolist)
                {
                    <div class="d-flex align-items-center border-bottom py-2">
                        <input class="form-check-input m-0" type="checkbox">
                        <div class="w-100 ms-3">
                            <div class="d-flex w-100 align-items-center justify-content-between">
                                <span>@item.Text...</span>
                                <a asp-action="TodolistDelete" asp-route-id="@item.Id" class="btn btn-sm"><i class="fa fa-times"></i></a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>

        // Salse & Revenue Chart
        var ctx2 = $("#salse-revenue").get(0).getContext("2d");
        var myChart2 = new Chart(ctx2, {
            type: "line",
            data: {
                labels: ["2017", "2018", "2019", "2020", "2021", "2022", "2023"],
                datasets: [{
                    label: "Auktion",
                    data: [@auktion2017.Count, @auktion2018.Count, @auktion2019.Count, @auktion2020.Count, @auktion2021.Count, @auktion2022.Count, @auktion2023.Count],
                    backgroundColor: "rgba(235, 22, 22, .7)",
                    fill: true
                },
                {
                    label: "Sale",
                    data: [@sale2017.Count, @sale2018.Count, @sale2019.Count, @sale2020.Count, @sale2021.Count, @sale2022.Count, @sale2023.Count],
                    backgroundColor: "rgba(235, 22, 22, .5)",
                    fill: true
                }
                ]
            },
            options: {
                responsive: true
            }
        });


         // Single Bar Chart
    var ctx4 = $("#bar-chart").get(0).getContext("2d");
    var myChart4 = new Chart(ctx4, {
        type: "bar",
        data: {
            labels: ["Drawing", "Work", "Handmade", "Art", "Graphic Print"],
            datasets: [{
                    label: "Categories",
                    backgroundColor: [
                    "rgba(235, 22, 22, .7)",
                    "rgba(235, 22, 22, .6)",
                    "rgba(235, 22, 22, .5)",
                    "rgba(235, 22, 22, .4)",
                    "rgba(235, 22, 22, .3)"
                ],
                data: [@work.Count,@art.Count,@print.Count, @drawing.Count, @handmade.Count]
            }]
        },
        options: {
            responsive: true
        }
    });


    // Pie Chart
    var ctx5 = $("#pie-chart").get(0).getContext("2d");
    var myChart5 = new Chart(ctx5, {
        type: "pie",
        data: {
                labels: ["Design", "Ilustra", "Paint", "Poster", "Typog"],
                datasets: [{
                backgroundColor: [
                    "rgba(235, 22, 22, .7)",
                    "rgba(235, 22, 22, .6)",
                    "rgba(235, 22, 22, .5)",
                    "rgba(235, 22, 22, .4)",
                    "rgba(235, 22, 22, .3)"
                ],
                data: [@Design.Count, @Illustration.Count, @Painting.Count, @Posters.Count, @Typography.Count]
            }]
        },
        options: {
            responsive: true
        }
    });


    

    // Doughnut Chart
    var ctx6 = $("#doughnut-chart").get(0).getContext("2d");
    var myChart6 = new Chart(ctx6, {
        type: "doughnut",
        data: {
            labels: ["Design", "Ilustra", "Paint", "Poster", "Typog"],
            datasets: [{
                backgroundColor: [
                    "rgba(235, 22, 22, .7)",
                    "rgba(235, 22, 22, .6)",
                    "rgba(235, 22, 22, .5)",
                    "rgba(235, 22, 22, .4)",
                    "rgba(235, 22, 22, .3)"
                ],
                data: [@(ViewBag.list1), @(ViewBag.list2), @(ViewBag.list3), @(ViewBag.list4), @(ViewBag.list5)]
            }]
        },
        options: {
            responsive: true
        }
    });

    </script>
}