<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-md-6 col-xl-4">
            <div class="h-100 bg-secondary rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="mb-0">Messages</h6>
                    <a asp-action="Index" asp-controller="Message">Show All</a>
                </div>
                @foreach (var item in Model.Messages)
                {
                    <div class="d-flex align-items-center border-bottom py-3">
                        <img class="rounded-circle flex-shrink-0" src="~/Uploads/Users/@item.AppUser.Image" alt="" style="width: 40px; height: 40px;">
                        <div class="w-100 ms-3">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-0">@item.AppUser.UserName</h6>
                                @if ((start - item.CreatAt).Days >= 1)
                                {
                                    <small class="text-muted">@((start - item.CreatAt).Days) days ago</small>
                                }
                                else if ((start - item.CreatAt).Hours >= 1)
                                {
                                    <small class="text-muted">@((start - item.CreatAt).Hours) hours ago</small>
                                }
                                else
                                {
                                    <small class="text-muted">@((start - item.CreatAt).Minutes) mins ago</small>
                                }
                            </div>
                            @if (item.Text.Length>23)
                            {
                                <span>@item.Text.Substring(0, 23)...</span>
                            }
                            else{
                                <span>@item.Text</span>
                            }                           
                        </div>
                    </div>
                }
           
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-xl-4">
            <div class="h-100 bg-secondary rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Calender</h6>
                    <a href="">Show All</a>
                </div>
