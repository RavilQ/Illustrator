
@model PasswordResetViewModel

<link rel="stylesheet" href="~/assets/css/Login.css">

<main>
    <section style="background-color: #131313;position: relative;bottom: 3.5rem;">
        <h1 class="container">Illustrator</h1>
    </section>
    <section style="display: flex; justify-content: center;">
        <div class="row container">
            <h1 style="color: #131313;">Reset Password</h1>
            <div class="col">
                <form method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" id="floatingInput" placeholder="Max">
                        <label asp-for="Password">New Password</label>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingInput" placeholder="Max">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <input type="hidden" asp-for="Email" value="@ViewBag.email" />
                    <input type="hidden" asp-for="Token" value="@ViewBag.token" />
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <button style="width: 15%;background-color:#22262a;" type="submit" class="btn btn-dark">Reset</button>
                </form>
            </div>
        </div>
    </section>
</main>
